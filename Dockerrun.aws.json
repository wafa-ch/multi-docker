{
  "AWSEBDockerrunVersion": 2,

  "containerDefinitions": [
    {
      "name": "client",
      "image": "wafa01/multi-client",
      "hostname": "client",
      "essential": false
    },

    {
      "name": "server",
      "image": "wafa01/multi-server",
      "hostname": "api",
      "essential": false
    },

    {
      "name": "worker",
      "image": "wafa01/multi-worker",
      "hostname": "worker",
      "essential": false
    },

    {
      "name": "nginx",
      "image": "wafa01/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80

        }
      ],

      "links": ["client", "server"]

    }


  ]

}
